{
  "comments": {
    "lineComment": {
      "comment": "//"
    },
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["<", ">"]
  ],
  "autoClosingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"],
    ["<", ">"]
  ],
  "autoCloseBefore": ";:.,=}])>` \n\t",
  "folding": {
    "markers": {
      "start": "^\\s*//\\s*#?region\\b",
      "end": "^\\s*//\\s*#?endregion\\b"
    },
    "offSide": false
  },
  "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
  "onEnterRules": [
    {
      "beforeText": "^\\s*<([_:\\w][_:\\w-.\\d]*)([^/>]*(?!/)>)[^<>]*$",
      "afterText": "^\\s*</([_:\\w][_:\\w-.\\d]*)>",
      "action": {
        "indent": "indentOutdent"
      }
    },
    {
      "beforeText": "^\\s*<(\\w[\\w\\d]*)([^/>]*(?!/)>)[^<>]*$",
      "action": {
        "indent": "indent"
      }
    }
  ]
}
