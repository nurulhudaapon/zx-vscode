pub fn Greeting(allocator: zx.Allocator, name: []const u8) zx.Component {
    return (<p @allocator={allocator}>{"Hello, "}{name}</p>);
}

pub fn Page(allocator: zx.Allocator) zx.Component {
    return (
        <main @allocator={allocator}>
            (<Greeting @allocator={allocator} name="Alice" />)
        </main>
    );
}

const zx = @import("zx");
